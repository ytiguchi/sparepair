rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /reports/{allPaths=**} {
      // 読み取りは誰でも可能
      allow read: if true;
      
      // 書き込み時の制限
      allow write: if request.resource.size < 5 * 1024 * 1024  // 5MB以下
                   && request.resource.contentType.matches('image/.*');  // 画像のみ
      
      // 削除は許可
      allow delete: if true;
    }
  }
}
